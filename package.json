{
  "name": "bluesky-bot-webapp",
  "version": "1.0.0",
  "description": "Web app for generating and posting tweets to Bluesky from webpages",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build"
  },
  "dependencies": {
    "@atproto/api": "^0.13.21",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "openai": "^4.78.1"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.9"
  }
}